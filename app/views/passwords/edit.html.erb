<div id='clearance' class='password-reset'>
  <h2><%= t '.title' %></h2>

  <p><%= t '.description' %></p>

  <%= simple_form_for :password_reset,
        :url => user_password_path(@user, :token => @user.confirmation_token),
        :html => { :method => :put,:class => 'form-horizontal'  } do |form| %>
    <%= form.input :password%>
    <div class="control-group">
      <div class="controls">
    <%= form.button :submit%>
      </div>
    </div>
  <% end %>
</div>

<%- model_class = Gist -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%=link_to('import gists',import_gists_user_path(current_user),:class=>'btn btn-mini pull-right') if @user%>
<%=link_to('write gist','https://gist.github.com/',:class=>'btn btn-mini pull-right') if @user%>
<br/><br/>
<%=render 'list',:collection=>@collection%>
<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>

<% content_for :right do %>
<%=render('tags/list',:collection=>@user.owned_tags.order('name asc'),:user=>@user) if @user%>
<% end %>
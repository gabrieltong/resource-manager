<%- model_class = Gist -%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:address) %></th>
    </tr>
  </thead>
  <tbody>
    <% collection.each do |gist| %>
      <tr>
        <td><%= link_to gist.address, gist_path(gist) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
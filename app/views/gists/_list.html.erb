<%- model_class = Gist -%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:tags) %></th>      
    </tr>
  </thead>
  <tbody>
    <% collection.each do |gist| %>
      <tr>
        <td>
          <%= link_to gist.extra['html_url'],gist.extra['html_url'] %>
        </td>
        <td><%= render 'tags/input',:taggable=>gist,:owner=>@user%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%- model_class = User -%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:username) %></th>
    </tr>
  </thead>
  <tbody>
    <% collection.each do |user| %>
      <tr>
        <td><%= link_to user.email, user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
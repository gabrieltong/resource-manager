<%- model_class = ActsAsTaggableOn::Tag -%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
    </tr>
  </thead>
  <tbody>
    <% collection.each do |tag| %>
    <% tag=TagsDecorator.decorate(tag)%>
      <tr>
        <td>
          <% if defined?(user) %>
          <%= link_to tag.name_count, user_tag_path(user,tag) %></td>
          <% else %>
          <%= link_to tag.name_count, tag_path(tag) %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%- model_class = ActsAsTaggableOn::Tag -%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
    </tr>
  </thead>
  <tbody>
    <% collection.each do |tag| %>
      <tr>
        <td><%= link_to tag.name, tag_path(tag) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
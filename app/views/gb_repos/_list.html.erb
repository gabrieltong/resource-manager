<%- model_class = GbRepo -%>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
    </tr>
  </thead>
  <tbody>
    <% collection.each do |gb_repo| %>
      <!-- <% gb_repo=GbRepoDecorator.decorate(gb_repo)%> -->
      <tr>
        <td><%= link_to gb_repo.extra['name'], gb_repo_path(gb_repo) %></td>
        <td>
          <%= gb_repo.address %><br/>
          <input tags='<%=gb_repo.menus_from(@user).join(',')%>' type="text" name="tags" placeholder="Tags" class="tm-input"/>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>